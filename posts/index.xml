    <item>
      <title>制作kali移动U盘使用EFI启动</title>
      <link>https://example.org/posts/05.%E5%88%B6%E4%BD%9Ckali%E7%A7%BB%E5%8A%A8u%E7%9B%98%E4%BD%BF%E7%94%A8efi%E5%90%AF%E5%8A%A8/</link>
